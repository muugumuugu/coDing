settings <- function() {
    size(100, 100, P3D)
}

draw <- function() {
    background(0)
    noStroke()
    directionalLight(102, 102, 102, 0, 0, -1)
    lightSpecular(204, 204, 204)
    directionalLight(102, 102, 102, 0, 1, -1)
    lightSpecular(102, 102, 102)
    translate(20, 50, 0)
    specular(51, 51, 51)
    sphere(30)
    translate(60, 0, 0)
    specular(102, 102, 102)
    sphere(30)
}
